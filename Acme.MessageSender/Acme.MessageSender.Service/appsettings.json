{
    "AppSettings": {
        "EmployeeApiBaseUrl": "https://eohmc-acme-api.azurewebsites.net/api/",
        "BirthdayEmailSettings": {
            "TargetEmailAddress": "",
            "EmailTemplate": "Happy Birthday {0}, {1}.",
            "EmailSubject":  "Happy Birthday"
        },
        "SmtpSettings": {
            "server": "", // set smtp server
            "useAuthentication": false,
            "useSecureConnection": false,
            "Port": 25,
            "username": "", // leave blank if not using authentication
            "password": "", // leave blank if not using authentication
            "SendEmailEnabled": false // use this for debugging to avoid email errors when the smtp settings are not complete (during development)
        }
    },
    "Logging": {
        "PathFormat": "logs/Acme.MessageSender-{Date}.txt",
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    }
}
